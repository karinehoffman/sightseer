<!-- Validation failure messages -->

<% if @type.errors.any? %>
  <% @type.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="row">
  <div class="col-md-12">
    <ol class="breadcrumb">
      <li><a href="/types">Site Types</a></li>
      <li class="active">Add Site Type</li>
    </ol>
  </div>
</div>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Site Type</h3>
      </div>
      <div class="panel-body">
        <form action="/create_type" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for type -->
          <div class="form-group">
            <label for="type" class="col-sm-2 control-label">
              Site Type
            </label>
            <div class="col-sm-10">
              <input type="text" id="type" name="type" placeholder="Type (e.g., restaurant, hotel)" class="form-control" value="<%= @type.name %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-success">
                Create Site Type
              </button>
              or
              <a href="/types">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
