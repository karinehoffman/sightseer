<!-- Validation failure messages -->

<% if @tripuser.errors.any? %>
  <% @tripuser.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Tripuser #<%= @tripuser.id %></h3>
      </div>
      <div class="panel-body">
        <form action="/update_tripuser/<%= @tripuser.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for trip_id -->
          <div class="form-group">
            <label for="trip_id" class="col-sm-2 control-label">
              Trip
            </label>
            <div class="col-sm-10">
              <input type="text" id="trip_id" name="trip_id" placeholder="Trip" class="form-control" value="<%= @tripuser.trip_id %>">
            </div>
          </div>

          <!-- Label and input for user_id -->
          <div class="form-group">
            <label for="user_id" class="col-sm-2 control-label">
              User
            </label>
            <div class="col-sm-10">
              <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @tripuser.user_id %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update Tripuser
              </button>
              or
              <a href="/tripusers/<%= @tripuser.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
