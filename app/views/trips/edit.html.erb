<!-- Validation failure messages -->

<% if @trip.errors.any? %>
  <% @trip.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="row">
  <div class="col-md-12">
    <ol class="breadcrumb">
      <li><a href="/trips">Trips</a></li>
      <li><a href="/trips/<%= @trip.id%>"><%= @trip.name %></a></li>
      <li class="active">Edit Trip</li>
    </ol>
  </div>
</div>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit "<%= @trip.name %>" Trip Details</h3>
      </div>
      <div class="panel-body">
        <form action="/update_trip/<%= @trip.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for name -->
          <div class="form-group">
            <label for="name" class="col-sm-2 control-label">
              Name
            </label>
            <div class="col-sm-10">
              <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @trip.name %>">
            </div>
          </div>

          <!-- Label and input for description -->
          <div class="form-group">
            <label for="description" class="col-sm-2 control-label">
              Description
            </label>
            <div class="col-sm-10">
              <textarea id="description" name="description" placeholder="Description" class="form-control" rows="3"><%= @trip.description %></textarea>
            </div>
          </div>

          <!-- Label and input for start_date -->
          <div class="form-group">
            <label for="start_date" class="col-sm-2 control-label">
              Start date
            </label>
            <div class="col-sm-10">
              <input type="text" id="start_date" name="start_date" placeholder="Start date" class="form-control" value="<%= @trip.start_date %>">
            </div>
          </div>

          <!-- Label and input for end_date -->
          <div class="form-group">
            <label for="end_date" class="col-sm-2 control-label">
              End date
            </label>
            <div class="col-sm-10">
              <input type="text" id="end_date" name="end_date" placeholder="End date" class="form-control" value="<%= @trip.end_date %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update Trip
              </button>
              or
              <a href="/trips/<%= @trip.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
