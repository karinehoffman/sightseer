<!-- Responsive panel example-->

<ol class="breadcrumb">
  <li><a href="/trips">Trips</a></li>
  <li class="active"><%= @trip.name %></li>
</ol>

<!-- TRIP DETAILS -->
<div class="row isotope-container">
  <div class="col-sm-4 isotope-item">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= @trip.name %> Trip Details</h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl">

              <dt>Description</dt>
              <dd><%= @trip.description %></dd>

              <dt>Start date</dt>
              <dd><%= @trip.start_date %></dd>

              <dt>End date</dt>
              <dd><%= @trip.end_date %></dd>

            </dl>
            <!-- EDIT TRIP DETAILS -->
            <div class="btn-group btn-group-justified">

              <a href="/trips/<%= @trip.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_trip/<%= @trip.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

<!-- SITES TO SEE -->
  <div class="col-sm-8 isotope-item">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Sites to See</h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <table class="table">
              <tbody>
                <% @trip.sites.each do |site| %>
                  <tr>
                    <td><%= site.name %></td>
                    <td><%= site.city.name %></td>
                    <td><%= site.type.name %></td>
                    <td>
                      <a href="/delete_site/<%= site.id %>" class="btn btn-sm btn-danger pull-right" rel="nofollow">
                        <i class="fa fa-trash-o"></i>
                      </a>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      <!-- EDIT SITES TO SEE -->
        <div class="btn-group btn-group-justified">
          <a href="/sites/new" class="btn btn-primary">
            <i class="fa fa-plus"></i>
          </a>
      </div>
      </div>
    </div>
  </div>
</div>

<!-- TRAVELERS -->
<div class="row isotope-container">
  <div class="col-sm-4 isotope-item">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Travelers</h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <table class="table">
              <tbody>
                <% @trip.tripusers.each do |user| %>
                  <tr>
                    <td><%= user.first_name %> <%= user.last_name %></td>
                    <td>
                      <a href="/delete_tripuser/<%= user.id %>" class="btn btn-sm btn-danger" rel="nofollow">
                        <i class="fa fa-trash-o"></i>
                      </a>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
        <!-- EDIT TRAVELERS -->
        <div class="btn-group btn-group-justified">
          <a href="/tripusers/new" class="btn btn-primary">
            <i class="fa fa-plus"></i>
          </a>
      </div>
      </div>
    </div>
  </div>
</div>

<!-- DESTINATIONS -->
<div class="row isotope-container">
  <div class="col-sm-4 isotope-item">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Countries to Visit</h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <table class="table borderless">
              <tbody>
                <% @trip.destinations.each do |destination| %>
                  <tr>
                    <td class="col-md-8" style="border-top: none;"><%= destination.country.name %></td>
                    <td class="col-md-2" style="border-top: none;">
                      <a href="/destinations/<%= destination.id %>/edit" class="btn btn-sm btn-warning">
                        <i class="fa fa-edit"></i>
                      </a>
                    </td>
                    <td class="col-md-2" style="border-top: none;">
                      <a href="/delete_destination/<%= destination.id %>" class="btn btn-sm btn-danger" rel="nofollow">
                        <i class="fa fa-trash-o"></i>
                      </a>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>

      <!--ADD NEW DESTINATION -->
        <div>
          <h3 class="panel-title">Add Country</h3>
        </div>
        <div class="panel-body">
          <form action="/create_destination" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
            <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

            <input type="hidden" name="trip_id" value="<%= @trip.id %>">

            <!-- Label and input for country_id -->
            <div class="form-group">
              <label for="country_id" class="col-sm-3 control-label">
                Country
              </label>
              <div class="col-sm-9">
                <%=select_tag(:country_id, options_from_collection_for_select(Country.all, :id, :name, 1), :class => "form-control") %>
              </div>
            </div>

            <div class="form-group text-center">
              <div >
                <button class="btn btn-success">
                  Add Country
                </button>
              </div>
            </div>

          </form>
        </div>

      </div>
    </div>
  </div>
</div>

<!--CITIES -->
<div class="row isotope-container">
  <div class="col-sm-4 isotope-item">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Cities to Visit</h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <table class="table">
              <tbody>
                <% @trip.cities.each do |city| %>
                  <tr>
                    <td class="col-md-8" style="border-top: none;"><%= city.name %>, <%= city.country.name %></td>
                    <td class="col-md-2" style="border-top: none;">
                      <a href="/cities/<%= city.id %>/edit" class="btn btn-sm btn-warning">
                        <i class="fa fa-edit"></i>
                      </a>
                    </td>
                    <td class="col-md-2" style="border-top: none;">
                      <a href="/delete_city/<%= city.id %>" class="btn btn-sm btn-danger" rel="nofollow">
                        <i class="fa fa-trash-o"></i>
                      </a>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>

        <!--ADD NEW CITY -->
        <div>
          <h3 class="panel-title">Add City</h3>
        </div>
        <div class="panel-body">
          <form action="/create_city" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
            <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

            <input type="hidden" name="trip_id" value="<%= @trip.id %>">

          <!-- Label and input for name -->
          <div class="form-group">
            <label for="name" class="col-sm-3 control-label">
              City
            </label>
            <div class="col-sm-9">
              <input type="text" id="name" name="name" placeholder="City name" class="form-control">
            </div>
          </div>

          <!-- Label and input for country_id -->
          <div class="form-group">
            <label for="country_id" class="col-sm-3 control-label">
              Country
            </label>
            <div class="col-sm-9">
              <%= select_tag(:country_id, options_from_collection_for_select(Country.all, :id, :name, 1), :class => "form-control") %>
            </div>
          </div>

            <div class="form-group text-center">
              <div >
                <button class="btn btn-success">
                  Add City
                </button>
              </div>
            </div>

          </form>
        </div>

      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
