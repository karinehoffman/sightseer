<!-- Validation failure messages -->

<% if @destinationsite.errors.any? %>
  <% @destinationsite.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Destinationsite #<%= @destinationsite.id %></h3>
      </div>
      <div class="panel-body">
        <form action="/update_destinationsite/<%= @destinationsite.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for trip_id -->
          <div class="form-group">
            <label for="trip_id" class="col-sm-2 control-label">
              Trip
            </label>
            <div class="col-sm-10">
              <input type="text" id="trip_id" name="trip_id" placeholder="Trip" class="form-control" value="<%= @destinationsite.trip_id %>">
            </div>
          </div>

          <!-- Label and input for country_id -->
          <div class="form-group">
            <label for="country_id" class="col-sm-2 control-label">
              Country
            </label>
            <div class="col-sm-10">
              <input type="text" id="country_id" name="country_id" placeholder="Country" class="form-control" value="<%= @destinationsite.country_id %>">
            </div>
          </div>

          <!-- Label and input for city_id -->
          <div class="form-group">
            <label for="city_id" class="col-sm-2 control-label">
              City
            </label>
            <div class="col-sm-10">
              <input type="text" id="city_id" name="city_id" placeholder="City" class="form-control" value="<%= @destinationsite.city_id %>">
            </div>
          </div>

          <!-- Label and input for site_id -->
          <div class="form-group">
            <label for="site_id" class="col-sm-2 control-label">
              Site
            </label>
            <div class="col-sm-10">
              <input type="text" id="site_id" name="site_id" placeholder="Site" class="form-control" value="<%= @destinationsite.site_id %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update Destinationsite
              </button>
              or
              <a href="/destinationsites/<%= @destinationsite.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
