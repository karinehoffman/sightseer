<!-- Responsive panel example-->

<ol class="breadcrumb">
  <li><a href="/trips">Trips</a></li>
  <li><a href="/trips/<%= @site.trip_id%>"><%= @site.trip.name %></a></li>
  <li class="active">Site Details</li>
</ol>

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Site Details</h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">

              <dt>Site Name</dt>
              <dd><%= @site.name %></dd>

              <dt>Description</dt>
              <dd><%= @site.description %></dd>

              <dt>City</dt>
              <dd><%= @site.city.name %></dd>

              <dt>Site Type</dt>
              <dd><%= @site.type.name %></dd>

              <dt>Image</dt>
              <dd><img width="300" src="<%= @site.photo %>"></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/trips/<%= @site.trip_id%>" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/sites/<%= @site.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_site/<%= @site.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
