<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">City #<%= @city.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Trip</dt>
              <dd><%= @city.trip.name %></dd>

              <dt>Name</dt>
              <dd><%= @city.name %></dd>

              <dt>Country</dt>
              <dd><%= @city.country.name %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/cities" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/cities/<%= @city.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_city/<%= @city.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
