<!-- Validation failure messages -->

<% if @destination.errors.any? %>
  <% @destination.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Country to Trip</h3>
      </div>
      <div class="panel-body">
        <form action="/create_destination" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for trip_id -->
          <div class="form-group">
            <label for="trip_id" class="col-sm-2 control-label">
              Trip
            </label>
            <div class="col-sm-10">
              <%= select_tag(:trip_id, options_from_collection_for_select(Trip.order(:name), :id, :name, @destination.trip_id), :class => "form-control") %>
            </div>
          </div>

          <!-- Label and input for country_id -->
          <div class="form-group">
            <label for="country_id" class="col-sm-2 control-label">
              Country
            </label>
            <div class="col-sm-10">
              <%= select_tag(:country_id, options_from_collection_for_select(Country.order(:name), :id, :name, @destination.country_id), :class => "form-control") %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-success">
                Create Destination
              </button>
              or
              <a href="/destinations">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
